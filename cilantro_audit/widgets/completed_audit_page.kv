#:import os os

<CompletedAuditPage>:

    size: root.width, root.height
    stack_list: stack_list
    grid_list: grid_list
    scrolling_panel: scrolling_panel

    GridLayout:
        id: grid_list
        pos_hint: {"top": 1}
        size_hint: 1, .1
        cols: 4
        rows: 1

    ScrollView:
        size_hint: 1, .77
        pos_hint: {"top": .9}
        id: scrolling_panel

        StackLayout:
            id: stack_list
            size_hint: 1, 1
            size_hint_y: None
            minimum_height: 5

            GridLayout:
                row_force_default: True
                row_default_height: 0
                cols: 1
                spacing: 80
                size_hint_y: None

    GridLayout:
        rows: 1
        cols: 2
        spacing: 30
        size_hint_y: 0.1

        Button:
            text: "Back"
            on_release:
                root.clear_page()
                root.manager.current = root.previous_page

        Button:
            text: "Export to Excel"
            on_release: root.show_save()

<QuestionAnswer>:
    question_label: question_label
    answer_response_label: answer_response_label
    answer_comments_label: answer_comments_label
    answer_severity_label: answer_severity_label
    resolve_button: resolve_button

    size_hint: 1, None
    height: 120

    Label:
        id: question_label
        markup: True
        text: root.question_text
        font_size: 20
        color: 1, 1, 1, 1
        size_hint: None, None
        pos_hint: {"top": 1, "center_x": 0.6}
        text_size: root.width-50, None

    Label:
        id: answer_response_label
        markup: True
        text: root.answer_response_text
        font_size: 20
        color: 1, 1, 1, 1
        size_hint: None, None
        pos_hint: {"top": .8, "center_x": 0.6}
        text_size: root.width-50, None

    Label:
        id: answer_comments_label
        markup: True
        text: root.answer_comments_text
        font_size: 20
        color: 1, 1, 1, 1
        size_hint: None, None
        pos_hint: {"top": .6, "center_x": 0.6}
        text_size: root.width-50, None

    Label:
        id: answer_severity_label
        markup: True
        text: root.answer_severity_text
        font_size: 20
        color: 1,1,1,1
        size_hint: None, None
        pos_hint: {"top": .4, "center_x": 0.6}
        text_size: root.width-50, None

    Button:
        visible: False
        id: resolve_button
        size_hint_x: 0.1 if self.visible else 0
        size_hint_y: 0.9 if self.visible else 0
        opacity: 1 if self.visible else 0
        disabled: not self.visible
        text: 'Mark as resolved'
        pos_hint: {"top": 0.5, "center_x": 0.9}
        on_release: root.resolve_response()

<SaveDialog>
    text_input: text_input

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser
            path: "C:\\Users\\" + os.getlogin() + "\\Desktop"
            on_selection: text_input.text = self.selection and self.selection[0] or ''
            dirselect: True
            show_hidden: True

        TextInput:
            id: text_input
            text: "C:\\Users\\" + os.getlogin() + "\\Desktop\\example.xlsx"
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

<OverwritePopup>
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        Label:
            text_size: root.width, None
            text: "Another file was found with the same name. Would you like to overwrite it?"
            halign: 'center'
            font_size: 17

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "No"
                on_release: root.no()

            Button:
                text: "Yes"
                on_release: root.yes()

<FileSavedPopup>
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        Label:
            text_size: root.width, None
            text: "File successfully exported."
            halign: 'center'
            font_size: 17

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: "Ok"
                on_release: root.ok()

<ErrorPopup>
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        Label:
            text_size: root.width, None
            markup: True
            text: "[color=#fc0303][b]Error:[/b][/color] Please enter a file not a directory."
            halign: 'center'
            font_size: 17

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: "Ok"
                on_release: root.ok()

