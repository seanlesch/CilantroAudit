#:import ADMIN_SCREEN cilantro_audit.constants.ADMIN_SCREEN
#:import COMPLETED_AUDITS_LIST_PAGE cilantro_audit.constants.COMPLETED_AUDITS_LIST_PAGE

<CompletedAuditsListPage>:

    date_col: date_col
    title_col: title_col
    audit_list: audit_list
    auditor_col: auditor_col
    severity_col: severity_col
    unresolved_col: unresolved_col
    refresh_button: refresh_button
    page_count_label: page_count_label

    GridLayout:
        id: page_layout
        rows: 2
        spacing: 10

        GridLayout:
            id: list_area
            cols: 2
            spacing: 10

            GridLayout:
                id: list_layout
                rows: 2
                size_hint_x: 1.8
                spacing: 10

                GridLayout:
                    id: headers
                    cols: 5
                    spacing: 10
                    size_hint_y: 0.1

                    Button:
                        id: title_header
                        text: 'Title'
                        spacing: 10
                        on_press: root.manager.get_screen(COMPLETED_AUDITS_LIST_PAGE).sort_by_title()

                    Button:
                        id: date_header
                        text: 'Date'
                        spacing: 10
                        on_press: root.manager.get_screen(COMPLETED_AUDITS_LIST_PAGE).sort_by_date()

                    Button:
                        id: auditor_header
                        text: 'Auditor'
                        spacing: 10
                        on_press: root.manager.get_screen(COMPLETED_AUDITS_LIST_PAGE).sort_by_auditor()

                    Button:
                        id: auditor_header
                        text: 'Severity'
                        spacing: 10
                        on_press: root.manager.get_screen(COMPLETED_AUDITS_LIST_PAGE).sort_by_severity()

                    Button:
                        id: unresolved_header
                        text: 'Unresolved'
                        spacing: 10
                        on_press: root.manager.get_screen(COMPLETED_AUDITS_LIST_PAGE).sort_by_unresolved()

                ScrollView:
                    id: scrollable_list

                    GridLayout:
                        id: audit_list
                        cols: 5
                        spacing: 10
                        size_hint_y: None

                        GridLayout:
                            id: title_col
                            cols: 1

                        GridLayout:
                            id: date_col
                            cols: 1

                        GridLayout:
                            id: auditor_col
                            cols: 1

                        GridLayout:
                            id: severity_col
                            cols: 1

                        GridLayout:
                            id: unresolved_col
                            cols: 1

            GridLayout:
                rows: 3
                size_hint_x: 0.1
                Label:
                    id: page_count_label
                    text: "Page 1"
                Button:
                    id: next_page
                    text: 'Next Page'
                    size_hint_x: 0.1
                    spacing: 10
                    on_press: root.manager.get_screen(COMPLETED_AUDITS_LIST_PAGE).next_page()
                Button:
                    id: previous_page
                    text: 'Prev Page'
                    size_hint_x: 0.1
                    spacing: 10
                    on_press: root.manager.get_screen(COMPLETED_AUDITS_LIST_PAGE).prev_page()

        GridLayout:
            id: navigation_options
            cols: 4
            spacing: 10
            size_hint_y: 0.1

            Button:
                text: 'Return to Admin Page'
                size_hint_y: None
                size: 400, 50
                on_press: root.manager.current = ADMIN_SCREEN

            Button:
                id: refresh_button
                text: 'Refresh List'
                size_hint_y: None
                size: 400, 50
                on_press: root.manager.get_screen(COMPLETED_AUDITS_LIST_PAGE).load_completed_audits()

            Button:
                text: 'Search'
                size_hint_y: None
                size: 400, 50
                on_press: root.search_audit_list_pop()

            Button:
                text: 'Clear Search Results'
                size_hint_y: None
                size: 400, 50
                on_press: root.refresh_completed_audits()

<SearchPop>:
    auto_dismiss: True
    title: "Search Criteria"
    size_hint: .5, .5

    search_text: search_text
    popup_search_button: popup_search_button

    GridLayout:
        rows: 3

        Label:
            text: "Please enter the title of the audit you are looking for."

        TextInput:
            id: search_text
            multiline: False

        GridLayout:
            rows: 1

            Button:
                id: popup_search_button
                text: "Search"
                pos_hint: {"x": 0, "y": 0}

            Button:
                text: "Cancel"
                pos_hint: {"right": 1, "y": 0}
                on_press: root.dismiss()
